{
  "compilerOptions": {
    /* Configurações de Módulo e Target */
    "target": "ES2022",               
    "module": "NodeNext",             
    "moduleResolution": "NodeNext",   
    /* Interoperabilidade */
    "esModuleInterop": true,         
    "allowSyntheticDefaultImports": true,

    /* Checagem */
    "strict": true,                   
    "skipLibCheck": true,           

    /* Configuração do Projeto */
    "noEmit": true,                   
    "allowJs": true                  
  },
  
  "include": ["tests/**/*.ts"]
}
